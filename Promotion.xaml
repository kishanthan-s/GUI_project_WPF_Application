        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Online_Food_Order_Software"
        mc:Ignorable="d"
        Title="Promotion" WindowState="Maximized" ResizeMode="NoResize" Width="1608" Height="900" WindowStyle="None" Background="#FF7D6868">
    
    <Grid >
       <Grid.Background>
            <ImageBrush ImageSource="Images/promoback.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="1123">
            <TextBlock HorizontalAlignment="Left" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="90" FontSize="40" Width="1123" FontFamily="Curlz MT" FontWeight="Bold" FontStyle="Italic" TextDecorations="{x:Null}" Opacity="1.5" Foreground="#FFFDFAFA" >
                
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect><Run Text="We believe providing nourishment is our blessing" FontWeight="Bold" FontSize="48">
    <Run.Foreground>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Run.Foreground>
</Run><InlineUIContainer>  
                </InlineUIContainer></TextBlock>

        </Grid>

        <Grid  HorizontalAlignment="Left" Height="542" Margin="0,180,0,0" VerticalAlignment="Top" Width="1608">
