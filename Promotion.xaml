            </Button>
            <Button Margin="740,7,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="250" Width="300" Foreground="{x:Null}"  BorderBrush="{x:Null}" Background="{x:Null}" Click="Button_Click_2"  >
                <Image HorizontalAlignment="Left"  VerticalAlignment="Top" Height="250" Width="266" Source="images/pizza promotion1.jpg"  Stretch="Fill"></Image>
            </Button>
            <Button Margin="1100,7,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="250" Width="300" Foreground="{x:Null}"  BorderBrush="{x:Null}" Background="{x:Null}" Click="Button_Click_3">
                <Image Height="250" Width="266" HorizontalAlignment="Left"  VerticalAlignment="Top" Source="images/pizzapromo1.jpg" Stretch="Fill" ></Image>
            </Button>
            <Button Margin="1100,265,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="250" Width="300" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" Click="Button_Click_7">
