            <Button Margin="380,7,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top"  Height="250"  Width="300" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" Click="Button_Click_1">
