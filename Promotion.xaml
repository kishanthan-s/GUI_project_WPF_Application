            </Button>
            <Button Margin="380,265,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="250" Width="300" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" Click="Button_Click_5">
                <Image Height="250" Width="266" HorizontalAlignment="Left" VerticalAlignment="Top"  Source="images/kitzpizzapromo1.jpg" Stretch="Fill"/>
            </Button>
            <Button Margin="740,265,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="250" Width="300" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" Click="Button_Click_6">
                <Image Height="250" Width="266" HorizontalAlignment="Left" VerticalAlignment="Top"  Source="images/choclatepromo.jpg" Stretch="Fill"/>
            </Button>
            <Button Margin="20,265,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="250" Width="300" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" Click="Button_Click_4">
                <Image Height="240" Width="266" HorizontalAlignment="Left" VerticalAlignment="Top"  Source="images/cokepromo1.jpg" Stretch="Fill"/>
            </Button>





        </Grid>


        <Grid HorizontalAlignment="Left" Height="128" Margin="0,772,0,0" VerticalAlignment="Top" Width="1608">
            <Grid.Background>
                <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                    <GradientStop Color="white" Offset="0"/>
                    <GradientStop Color="Black" Offset=".95"/>
